<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emoji_search_overlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dark_background"
    android:visibility="gone">

    <!-- Search Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/emoji_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍 Emoji Search"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/emoji_search_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/sym_keyboard_cancel"
            android:scaleType="centerInside"
            android:contentDescription="Close search" />

    </LinearLayout>

    <!-- Search Input Display -->
    <TextView
        android:id="@+id/emoji_search_query"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@android:color/transparent"
        android:hint="Type to search emojis..."
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:maxLines="1" />

    <!-- Search Results Grid -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/emoji_search_results"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:gravity="center_vertical">

            <!-- Emoji results will be added here programmatically -->

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
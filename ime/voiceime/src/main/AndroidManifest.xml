<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <!-- for voice -->
        <service android:name="com.google.android.voiceime.ServiceHelper" />
        <!-- for voice recording foreground service -->
        <service
            android:name="com.google.android.voiceime.VoiceRecordingForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <activity
            android:name="com.google.android.voiceime.ActivityHelper"
            android:clearTaskOnLaunch="true"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation"
            android:documentLaunchMode="never"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>
</manifest>
